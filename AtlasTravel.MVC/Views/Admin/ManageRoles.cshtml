<h2>Manage Roles</h2>

<form method="post" asp-action="CreateRole">
    <input name="roleName" class="form-control" placeholder="New role name" />
    <button type="submit" class="btn btn-success mt-1">Add Role</button>
</form>

<table class="table mt-3">
    <thead>
        <tr><th>Role</th><th>Action</th></tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.RoleName</td>
                <td>
                    <form asp-action="DeleteRole" method="post">
                        <input type="hidden" name="roleId" value="@role.RoleID" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        <a class="btn btn-warning btn-sm" asp-action="ManagePermissions" asp-route-roleId="@role.RoleID">Manage Permissions</a>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="mt-3">
    <a class="btn btn-info" asp-action="Index" asp-controller="Home">Back to Home</a>
</div>
