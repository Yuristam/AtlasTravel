@model AtlasTravel.MVC.Dtos.ChangePasswordDto

@{
    ViewData["Title"] = "Сменить пароль";
}

<h1 class="display-4">Сменить пароль</h1>

<p>Пожалуйста, введите текущий пароль и новый пароль для смены пароля.</p>

<form asp-action="changepassword" method="post">
    <div class="form-group">
        <label asp-for="CurrentPassword">Текущий пароль</label>
        <input asp-for="CurrentPassword" class="form-control" type="password" />
        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NewPassword">Новый пароль</label>
        <input asp-for="NewPassword" class="form-control" type="password" />
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword">Подтвердите новый пароль</label>
        <input asp-for="ConfirmPassword" class="form-control" type="password" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Сменить пароль</button>
    <a class="btn btn-secondary" asp-action="Edit">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<!-- This is a Razor view for changing the user's password in an ASP.NET MVC application. -->