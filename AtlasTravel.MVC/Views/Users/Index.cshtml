@model ICollection<AtlasTravel.MVC.Models.User>;

@{
    ViewData["Title"] = "Users";
}

<div class="text-center">
    <h1 class="display-4">Users</h1>
    <p>List of users in the system.</p>
    @if (!Model.Any())
    {
        <p>Пользователей пока нет.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Fullname</th>
                    <th>Email</th>
                    <th>Password</th>
                    <th>Budget</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.UserID</td>
                        <td>@user.FullName</td>
                        <td>@user.Email</td>
                        <td>@user.Password</td>
                        <td>@user.Budget</td>
                        <td>
                            <a class="btn btn-info" asp-action="Details" asp-route-id="@user.UserID">Details</a>
                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@user.UserID">Edit</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@user.UserID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <div>
        <a class="btn btn-primary" asp-action="Create">Create New User</a>
        <a class="btn btn-secondary" asp-action="Index">Refresh</a>
        <a class="btn btn-danger" asp-action="Logout">Logout</a>
    </div>
    <div class="mt-3">
        <a class="btn btn-info" asp-action="Index" asp-controller="Home">Back to Home</a>
    </div>
</div>