@model AtlasTravel.MVC.ViewModels.LoginViewModel;

@{
    ViewData["Title"] = "Sign In";
}

<h1 class="display-4">Sign In</h1>
<p>Please enter your credentials to sign in.</p>

<form method="post" asp-action="SignIn">
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <br/>
    <button type="submit" class="btn btn-primary">Sign In</button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
    </form>
<div class="mt-3">
    <a class="btn btn-info" asp-action="Index" asp-controller="Home">Back to Home</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<!-- This is the SignIn view for the AtlasTravel MVC application. It allows users to sign in using their email and password. -->